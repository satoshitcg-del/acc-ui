    "api-mock"
  ],
  "scripts": {
    "start": "yarn workspace app start",
    "start-api-mock": "yarn workspace api-mock start",
    "lint": "eslint --cache --report-unused-disable-directives .",
    "test": "vitest",
    "test:th": "yarn workspace app test:th",
    "test:th:ui": "yarn workspace app test:th:ui",
    "test:th:run": "yarn workspace app test:th:run",
    "test:th:coverage": "yarn workspace app test:th:coverage",
    "test:th:watch": "yarn workspace app test:th:watch",
    "test:th:integration": "yarn workspace app test:th:integration",
    "test:th:unit": "yarn workspace app test:th:unit",
    "build": "yarn workspace app build",
    "trans": "node ./convertTrans.js",
    "inc-version": "node ./checkVersion.js"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.11.0",
    "@emotion/eslint-plugin": "^11.11.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/eslint": "^8.44.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "graphql": "^16.8.0",
    "happy-dom": "^10.10.2",
    "prettier": "^3.0.2",
    "react": "^18.2.0",
    "relay-config": "^12.0.1",
    "typescript": "~5.1.6",
    "vite": "~4.4.9",
    "vitest": "^0.33.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "dependencies": {
    "google-auth-library": "^8.9.0",
    "google-spreadsheet": "^4.1.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
